# Application Configuration
APP_NAME=SecureStay
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=student_accommodation
DB_USERNAME=username
DB_PASSWORD=password

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM=noreply@securestay.com

# Third-party Verification Services
JUMIO_API_KEY=your_jumio_api_key_here
JUMIO_API_SECRET=your_jumio_api_secret_here
ONFIDO_API_KEY=your_onfido_api_key_here
ID_ME_CLIENT_ID=your_id_me_client_id_here
ID_ME_CLIENT_SECRET=your_id_me_client_secret_here

# Security
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
